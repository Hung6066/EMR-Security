{
  "ConnectionStrings": {
    "DefaultConnection": "Server=localhost;Database=EMRSystem;Trusted_Connection=True;TrustServerCertificate=True;MultipleActiveResultSets=true"
  },
  "JwtSettings": {
    "Secret": "YourSuperSecretKeyForJWTTokenGeneration12345ABCDEFG",
    "Issuer": "EMRSystemAPI",
    "Audience": "EMRSystemUsers",
    "AccessTokenExpirationMinutes": 60,
    "RefreshTokenExpirationDays": 7
  },
  "EmailSettings": {
    "SmtpServer": "smtp.example.com",
    "SmtpPort": 587,
    "SenderEmail": "noreply@emrsystem.com",
    "SenderName": "EMR System",
    "Username": "your-smtp-username",
    "Password": "your-smtp-password",
    "EnableSsl": true
  },
  "Encryption": {
    "MasterKey": "YourBase64Encoded32ByteMasterKeyForEncryption==", // Generate a secure key
    "IV": "YourBase64Encoded16ByteInitializationVector==" // Generate a secure IV
  },
  "Fido2": {
    "ServerDomain": "localhost",
    "Origin": "http://localhost:4200"
  },
  "RecaptchaSettings": {
    "SiteKey": "your-recaptcha-site-key",
    "SecretKey": "your-recaptcha-secret-key"
  },
  "IpRateLimiting": {
    "EnableEndpointRateLimiting": true,
    "StackBlockedRequests": false,
    "HttpStatusCode": 429,
    "GeneralRules": [
      {
        "Endpoint": "*/api/auth/login",
        "Period": "1m",
        "Limit": 5
      },
      {
        "Endpoint": "*/api/auth/register",
        "Period": "1h",
        "Limit": 10
      },
      {
        "Endpoint": "*",
        "Period": "1s",
        "Limit": 20
      }
    ]
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "DeceptionSettings": {
  "HoneyPatientId": 999999,
  "HoneyDoctorId": 999999,
  "HoneyApiKeyPrefix": "emr_honeypot"
}
}